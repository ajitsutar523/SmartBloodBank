<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:padding="5dp">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:layout_marginStart="111dp"

        android:layout_marginTop="3dp"
        android:text="Name"
        android:textColor="#00a7f5"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="112dp"
        android:layout_marginTop="43dp"
        android:text="bg"
        android:textColor="#f92a3f"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/cityregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="114dp"
        android:layout_marginTop="128dp"
        android:text="city"
        android:textColor="#000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/name"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:text="Name:"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bg"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="1dp"
        android:text="BloodGroup:"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_marginLeft="18dp"
        android:layout_marginTop="128dp"

        android:text="Email:"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView7"
        android:layout_alignParentTop="true"

        android:layout_marginStart="1dp"
        android:layout_marginTop="85dp"
        android:text="city:"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/emailregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_marginLeft="114dp"
        android:layout_marginTop="85dp"
        android:text="email"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="200dp"
        android:layout_marginTop="50dp"
        android:text="Phone No:"
        android:textSize="15sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/phoneno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="1.8in"
        android:textColor="#000"
        android:text="no" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView14"
        android:layout_alignParentTop="true"
        android:layout_marginTop="170dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="Address:" />

    <TextView
        android:id="@+id/addreregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_marginLeft="114dp"
        android:layout_alignBottom="@+id/textView11"
        android:text="addr"
        android:textColor="#000"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView9"
        android:layout_alignBottom="@+id/emailregister"
        android:text="Donor:"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/donorregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/phoneno"
        android:layout_alignTop="@+id/textView6"
        android:text="donor"
        android:textColor="#000"
        android:textSize="16sp"/>


</RelativeLayout>